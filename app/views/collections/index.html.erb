<div class="d-flex align-items-center justify-content-center">
    <h1>Your Collections</h1>
</div>
<br>
<%= render "shared/filterForm" %>
<br>
<div id = "outer">
<div class = "innerS"><%=button_to "Show All", collections_path, method: :get %></div>
</div><br>
    <div class="grid-3-columns">
    <%if Current.user.id != nil %>
        <% @collections.each do |collection|%>
        
            <%if collection.user_id == Current.user.id %>
                <div class="outer">
                    <div class="innerS">
                        <h2><%= link_to collection.title, collection, class: "nav-link" %></h2>
                    </div>
                    <br>
                    <div class = "innerS item"><%= link_to image_tag(collection.images[0], style: 'width: 100%'), collection %></div>
                </div>
                <%elsif collection.user_id != Current.user.id %>
                <%next %>
            <%end %>
        <%end %>
    <%end %>
    </div>
    <br>
<br>
<div >
<%= pagy_bootstrap_nav(@pagy).html_safe%>
</div>
<br>