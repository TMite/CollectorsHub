<h1><%=@collection.Title %> </h1>
<div>
    <%=User.find(@collection.user_id).email%>
</div>
<div>
    <%=@collection.Description %>
</div>
<br>
<div>
<%= image_tag(@collection.image, style: 'width: 50%')%>
</div>
<%= link_to "Edit Description", edit_collection_path(@collection) %>
<br>
<%= link_to "Delete", collection_path(@collection), method: :delete, data: { confirm: "Are you sure?"} %>