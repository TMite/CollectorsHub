<h1>General Posts</h1>
<br>
    <% @posts.each do |post|%>
        <div class="col-md-4">
        <h2><%= post.title %></h2>
        <div>
        <%=User.find(post.user_id).email%>
        </div>
        <br>
        <%= image_tag(post.image, style: 'width: 50%') %>
  
        <%= truncate(post.body, :length => 50)%>
        <br>
        <%= button_to "Read Post", post, :method => "get" %>
        <br>
        </div>
        <%end %>

<br>