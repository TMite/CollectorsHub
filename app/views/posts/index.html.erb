<div class="d-flex align-items-center justify-content-center">
<h1>General Posts</h1>
</div>
<br>
<%= render "shared/filterForm" %>
<div id = "outer">
<div class = "inner"><%=button_to "Show All", posts_path, method: :get %></div>
</div>
<br>
    <div class="grid-3-columns">
        <% @posts.each do |post|%>
            
                <div class="outer">
                    <div class="inner"><h2><%= post.title %></h2> </div>                  
                    <div class="inner"><%=User.find(post.user_id).username %></div>                    
                    <br>
                    <div class="inner item"><%= link_to(image_tag(post.image, style: 'width: 100%'), post) %></div>
                    <br>
                    <div class="inner"><%= button_to "Read Post", post, method: :get %></div>
                </div>             
            
        <%end %>
    </div>
<br>
<div class = "transformPost">
<%= pagy_bootstrap_nav(@pagy).html_safe%>
</div>