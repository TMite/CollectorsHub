<head>
    <%= stylesheet_pack_tag 'slides', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="d-flex align-items-center justify-content-center">
    <h1><%=@puser.username %> Collections</h1>
</div>
<br>
<div id = "outer">
<div class = "innerS"><%=button_to "Show All", others_posts_path, method: :get %></div>
</div><br>
    <div class="grid-3-columns">
    <%if Current.user.id != nil %>
        <% @puser.collection.where(Private: false).each do |collection|%>
        <div class="outer">
                
                    <div class="collections-font-Description-H innerS">
                    <%= %>
                        <p><h2><em><%= link_to collection.title, collection, class: "nav-link" %></em></h2></p>
                    </div>
                    <br>
                    <div class="innerS item"><%= link_to image_tag(collection.images[0], style: 'width: 100%'), collection %></div>
                
                </div>
        <%end %>
    <%end %>
    </div>
    <br>
<br>
