<h1><%=@post.title %> </h1>
<div>
    <%=User.find(@post.user_id).email%>
</div>
<div>
    <%=@post.body %>
</div>
<br>
<div>
    <%= image_tag(@post.image, style: 'width: 50%')%>
</div>
<%= link_to "Edit Post", edit_post_path(@post) %>
<br>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %>