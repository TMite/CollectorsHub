<h1><%=@post.title %> </h1>
<div>
    <%=link_to @post.user.username, others_posts_path%>
</div>
<div>
    <%=@post.body %>
</div>
<br>
<div>
    <%= image_tag(@post.image, style: 'width: 50%')%>
</div>
<br>
<%=@post.SFW %>
<br>
<%=@post.AllTags %>
<%= button_to "Edit Post", edit_post_path(@post), method: :get %>
<br>
<%= button_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %>
<br>
<h2> <%= @post.comments.count %> Comments</h2>
<br>
<%= render 'comments/cForm' %>
<%= render @post.comments %>
